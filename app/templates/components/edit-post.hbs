{{#if editPostForm}}
  <h4>Edit {{post.author}}'s {{post.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=post.author}}
      </div>

      <div class="form-group">
        <label for="image">Image Link</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>

      <div class="form-group">
        <label for="text">Text</label>
        {{input value=text id="text" placeholder=post.text}}
      </div>
      <button {{action 'edit' post}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editPostForm'}}>Edit</button>
{{/if}}
